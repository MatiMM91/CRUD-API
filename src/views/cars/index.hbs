
<div class="container mt-5">
    <div class="card">
        <h5 class="card-header">
            Autos
        </h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-striped  table-hover">
                    <thead>
                        <tr>
                            <th>PATENTE</th>
                            <th>CHASIS</th>
                            <th>AÃ‘O</th>
                            <th>MARCA</th>
                            <th>MODELO</th>
                            <th>COLOR</th>
                            <th>SEGURO</th>
                            <th>ACTIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cars}}
                         <tr>
                            <td>{{patente}}</td>
                            <td>{{chasis}}</td>
                            <td>{{ano}}</td>
                            <td>{{marca}}</td>
                            <td>{{modelo}}</td>
                            <td>{{color}}</td>
                            {{#if seguro}}
                                <td>Si</td>
                            {{else}}
                                <td>No</td>
                            {{/if}}
                            <td>
                                <div class="btn-group" role="group">
                                    <div>
                                        <a href="/cars/edit/{{id}}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                    <form action="/cars/delete" method="POST">
                                        <input type="hidden" value={{id}} name="id">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr> 
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>